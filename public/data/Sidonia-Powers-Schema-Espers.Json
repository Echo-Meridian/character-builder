{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Esper and Mentalist Lineage",
  "description": "A schema for the Esper and Mentalist lineage, detailing the branching evolution of Esper archetypes and the foundational paths of Mentalists.",
  "type": "object",
  "required": [
    "lineage",
    "esper_archetypes",
    "mentalist_framework"
  ],
  "properties": {
    "lineage": {
      "description": "The character lineage, which must be 'esper_mentalist'.",
      "type": "string",
      "const": "esper_mentalist"
    },
    "esper_archetypes": {
      "description": "Contains the core archetypes for Espers.",
      "type": "object",
      "properties": {
        "sentinel": {
          "$ref": "#/$defs/esperArchetype"
        }
      },
      "required": [
        "sentinel"
      ]
    },
    "mentalist_framework": {
      "description": "Defines the foundational choices and paths for Mentalists.",
      "type": "object",
      "required": [
        "description",
        "foundational_choices",
        "paths"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "foundational_choices": {
          "type": "object",
          "required": [
            "polarity",
            "scope"
          ],
          "properties": {
            "polarity": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/mentalistChoice"
              }
            },
            "scope": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/mentalistChoice"
              }
            }
          }
        },
        "paths": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_]+$": {
              "$ref": "#/$defs/mentalistPath"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "ability": {
      "type": "object",
      "required": [
        "id",
        "name",
        "description"
      ],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["augment", "move"] },
        "description": { "type": "string" }
      }
    },
    "esperArchetype": {
      "type": "object",
      "required": [
        "id",
        "name",
        "philosophy",
        "baseline_moves",
        "focuses"
      ],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "philosophy": { "type": "string" },
        "baseline_moves": {
          "type": "array",
          "items": { "$ref": "#/$defs/ability" }
        },
        "focuses": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_]+$": { "$ref": "#/$defs/focusNode" }
          }
        }
      }
    },
    "focusNode": {
      "type": "object",
      "required": [
        "id",
        "name",
        "path",
        "philosophy"
      ],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "path": { "type": "string" },
        "philosophy": { "type": "string" },
        "moves": { "type": "array", "items": { "$ref": "#/$defs/ability" } },
        "augments": { "type": "array", "items": { "$ref": "#/$defs/ability" } },
        "focuses": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_]+$": { "$ref": "#/$defs/focusNode" }
          }
        },
        "mutations": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_]+$": { "$ref": "#/$defs/focusNode" }
          }
        }
      }
    },
    "mentalistChoice": {
        "type": "object",
        "required": ["id", "name", "cost", "description"],
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "cost": { "type": "integer" },
            "description": { "type": "string" }
        }
    },
    "mentalistPath": {
      "type": "object",
      "required": [
        "id",
        "name",
        "natural_lean",
        "description",
        "moves",
        "trauma_mutations"
      ],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "natural_lean": { "type": "string" },
        "description": { "type": "string" },
        "moves": { "type": "array", "items": { "$ref": "#/$defs/ability" } },
        "augments": { "type": "array", "items": { "$ref": "#/$defs/ability" } },
        "trauma_mutations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name", "description"],
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "cost": { "type": "integer" }
            }
          }
        }
      }
    }
  }
}

